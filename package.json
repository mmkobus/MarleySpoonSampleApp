{
  "name": "recipes-app",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "watch:client:css": "chokidar \"src/**/*.scss\" -c \"npm run build:client:css\" --polling --silent",
    "watch:client:app": "cross-env NODE_PATH=src PORT=8080 BROWSER=none react-scripts start",
    "watch:server": "cross-env NODE_PATH=lib REACT_APP_SETTING=development PORT=3001 nodemon --watch lib --delay 5 lib/server/main.js",
    "watch:lib": "babel src/server --watch --out-dir lib/server",
    "watch": "npm-run-all --parallel watch:**",
    "dev": "npm-run-all build watch",
    "build:lib": "babel src/server -d lib/server",
    "build:client:css": "node-sass --include-path node_modules/ --importer node_modules/node-sass-glob-importer/dist/cli.js --output-style compressed -o src/ src/",
    "build:client:copy": "copyfiles -u 2 src/styles.css build/static/css/",
    "build:client:app": "cross-env NODE_PATH=src SETTINGS=development react-scripts build",
    "build:client": "npm-run-all --serial build:client:css build:client:app",
    "build": "npm-run-all clean --parallel build:*",
    "clean": "rimraf lib build src/styles.css",
    "serve:local": "cross-env NODE_PATH=lib NODE_ENV=production PORT=8080 HTTPS=false node ./lib/server/main.js",
    "start": "node lib/server/main.js"
  },
  "watch": {
    "build": "src/"
  },
  "proxy": "http://localhost:3001/",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-es2016": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-cerebral": "^1.0.1-1540476971523",
    "chokidar-cli": "^1.2.2",
    "contentful": "^7.8.2",
    "node-sass-glob-importer": "^5.3.2",
    "sass-mq": "^5.0.0"
  },
  "dependencies": {
    "@cerebral/http": "4.2.3",
    "@cerebral/react": "4.0.4-1548058576903",
    "@contentful/rich-text-from-markdown": "^13.1.0",
    "@contentful/rich-text-react-renderer": "^13.2.0",
    "cerebral": "5.1.0",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.1",
    "gsap": "^2.1.0",
    "helmet": "^3.18.0",
    "html-react-parser": "^0.7.0",
    "http-proxy-middleware": "^0.19.1",
    "i18next": "^13.1.0",
    "i18next-express-middleware": "^1.7.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "page": "^1.7.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "react-scripts": "^2.1.3",
    "react-toastify": "^3.1.1",
    "store": "^2.0.12"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=5.0.0"
  },
  "resolutions": {
    "terser": "3.14.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
